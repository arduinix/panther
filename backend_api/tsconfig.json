{
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "node16",
    "target": "ES2022",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "outDir": "out",
    "baseUrl": ".",
    "paths": {
      "*": [
          "node_modules/*",
          "src/types/*",
      ],
      "@lib/*": ["src/lib/*"],
      "@types/*": ["src/types/*"]
      
    },
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}